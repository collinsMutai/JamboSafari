{
  "extends": "./tsconfig.json",  // Extends the base configuration
  "compilerOptions": {
    "outDir": "./out-tsc/spec",  // Output directory for compiled test files
    "types": [
      "jasmine"  // Include Jasmine types for testing
    ],
    "typeRoots": [
      "node_modules/@types",  // Default TypeScript type definitions directory
      
    ]
  },
  "include": [
    "src/**/*.ts"  // Include all TypeScript files from the src directory
  ]
}
